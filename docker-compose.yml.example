version: "3"
services:
  nginx:
    container_name: nginx
    build:
      context: .
      dockerfile: ./infrastructure/nginx/Dockerfile
    ports:
      - 80:80
    volumes:
      - ./backend/public:/var/www/internship/public:cached
      - ./infrastructure/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    links:
      - learn
    depends_on:
      - learn
    working_dir: /var/www/learn

  learn:
    container_name: learn
    build:
      context: .
      dockerfile: ./infrastructure/php/Dockerfile
    volumes:
      - ./backend:/var/www/learn:cached
    working_dir: /var/www/learn

  mysql:
    image: mysql:5.7
    container_name: mysql
    expose:
      - "3306"
    ports:
      - "127.0.0.1:3306:3306"
    environment:
      MYSQL_DATABASE: learn
      MYSQL_ROOT_PASSWORD: root
      TZ: Asia/Tokyo
    volumes:
      - ./infrastructure/mysql/my.cnf:/etc/mysql/conf.d/mysql.cnf:ro
      - ./infrastructure/mysql/docker-entrypoint-initdb.d:/docker-entrypoint-initdb.d:ro
      - db-data:/var/lib/mysql
    stop_grace_period: 1m

  composer:
    container_name: composer
    build:
      context: .
      dockerfile: devtools/composer/Dockerfile
    volumes:
      - ./backend:/var/www/learn
    working_dir: /var/www/learn

  node:
    image: node:16
    container_name: node
    volumes:
      - ./backend:/var/www/learn
    working_dir: /var/www/learn

volumes:
  db-data:
    driver: local
